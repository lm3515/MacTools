<Window x:Class="MacTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="MAC地址批量生成工具" Margin="239,42,239,325" FontSize="30"/>
        <Label Content="数量：" HorizontalAlignment="Left" Margin="184,185,0,0" VerticalAlignment="Top" FontSize="22"/>
